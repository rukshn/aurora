// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model codeSystem {
  id BigInt @unique
  url String?
  identifier Json[]
  version String?
  name String?
  title String?
  status String?
  experimental Boolean?
  date String?
  publisher String?
  contact Json[]
  description String?
  useContext Json[]
  jurisdiction Json[]
  purpose String?
  copyright String?
  caseSensitive Boolean?
  valueSet String?
  hierarchyMeaning String?
  compositional Boolean?
  versionNeeded Boolean?
  content String?
  supplements String?
  filter codeSystemFilter[]
  property codeSystemProperty[]
  concept codeSystemConcept[]
}

model codeSystemFilter {
  id BigInt @unique
  code String?
  description String?
  operator String[]
  value String?
}

model codeSystemProperty {
  id BigInt @unique
  code String?
  url String?
  type String?
  description String?
}

model codeSystemConcept {
  id BigInt @unique
  code String
  display String?
  definition String?
  designation Json[]
  property codeSystemConceptProperty[]
}

model codeSystemConceptProperty {
  id BigInt @unique
  code String
  valueCode String?
  valueInteger Int?
  valueDecimal Decimal?
  valueDateTime DateTime?
  valueCoding Json?
  valueBoolean Boolean?
}